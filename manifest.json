{

  "manifest_version": 2,
  "name": "Shuttle",
  "description": "A firefox addon that helps with switching proxies by hostname",
  "version": "0.4",

  "icons": { "48": "img/icon.svg" },

  "browser_specific_settings": {
    "gecko": {
      "id": "Shuttle@landius.github.com",
      "strict_min_version": "69"
    }
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "permissions": ["proxy", "storage", "privacy", "tabs", "<all_urls>"]

}
